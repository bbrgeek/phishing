{% extends 'PichetCoreBundle::layout.html.twig' %}
{#{% extends '::base.html.twig' %}#}

{% block content %}
<div class="well">
    <div class="col-md-12  btn-primary">
        <div class="titre">Grande enquête interne sur la mobilité</div>
    </div>
    <div class="desc">Votre Service</div>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}
    {{ form_start(form, {'attr': {'id': 'step2'}}) }}

    <div class="form-group">
        {{ form_label(form.service,"Nom du service", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.service, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.manager,"Nom de votre manager", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.manager, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.deplacement,"Nombres de déplacements par mois", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.deplacement, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.telephone,"Indiquez votre numero de téléphone", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="col-md-12 center margintop20">
        {{ form_widget(form.save) }}
    </div>
    {{ form_rest(form) }}

    {{ form_end(form) }}
</div>
{% endblock %}