{% extends 'PichetCoreBundle::layout.html.twig' %}

{% form_theme form 'PichetCoreBundle::Form/form_fields.html.twig' %}

{% block content %}
    <h3>Votre service</h3>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}
    {#{{ form_start(form, {'attr': {'id': 'step2'}}) }}#}

    <div class="form-group">
        {{ form_label(form.service,"Nom du service", {'label_attr': {'class': 'col-sm-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.service, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.manager,"Nom de votre manager", {'label_attr': {'class': 'col-sm-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.manager, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.deplacement,"Nombres de déplacements par mois", {'label_attr': {'class': 'col-sm-4'}}) }}
        <div class="col-sm-12">
            {{ form_widget(form.deplacement) }}
        </div>

    </div>

    <div class="form-group">
        {{ form_label(form.telephone,"Indiquez votre numero de téléphone", {'label_attr': {'class': 'col-sm-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="end">
        {{ form_widget(form.save) }}
    </div>
    {{ form_rest(form) }}

    {{ form_end(form) }}


{% endblock %}