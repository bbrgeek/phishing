{% extends 'PichetCoreBundle::layout.html.twig' %}
{#{% extends '::base.html.twig' %}#}

{% block content %}
<div class="container">
    <div class="raw">
        <div class="col-xs-12 .col-md-4  btn btn-primary">
            <div class="titre">Grande enquête interne sur la mobilité</div>
        </div>
    </div>
    <h4>Informations personnelles</h4>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}
    {#{{ form_start(form, {'attr': {'id': 'step1'}}) }}#}

    <div class="form-group">
        {{ form_label(form.nom,"Nom", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.prenom,"Prénom", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.email,"Email", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.date,"Date de naissance", {'label_attr': {'class': 'col-sm-4 form-check-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.date, {'attr': {}}) }}
        </div>
    </div>

    {{ form_row(form.date) }}

    <div class="form-group">
        {{ form_label(form.ville,"Ville de naissance", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.transport,"Je me rend au travail en", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.transport) }}
        </div>
    </div>

    <div class="col-md-12 center margintop20">
        {{ form_widget(form.save) }}
    </div>

    {{ form_rest(form) }}

    {{ form_end(form) }}
    <a class="btn btn-primary add-participe" href="http://localhost:8000/step/1"
       data-participe-url="{{ path('pichet_core_admin_ajax_add_participe') }}">
        Participer
    </a>
</div>
{% endblock %}
