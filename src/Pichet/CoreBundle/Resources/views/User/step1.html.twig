{% extends 'PichetCoreBundle::layout.html.twig' %}
{#{% extends '::base.html.twig' %}#}

{% form_theme form 'PichetCoreBundle::Form/form_fields.html.twig' %}

{% block content %}

    <h3>Informations personnelles</h3>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}
    {#{{ form_start(form, {'attr': {'id': 'step1'}}) }}#}

    <div class="form-group">
        {{ form_label(form.nom,"Nom", {'label_attr': {'class': 'col-md-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.prenom,"Pr√©nom", {'label_attr': {'class': 'col-sm-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.email,"Email", {'label_attr': {'class': 'col-sm-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.date,"Date de naissance", {'label_attr': {'class': 'col-sm-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.date, {'attr': {}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.ville,"Ville de naissance", {'label_attr': {'class': 'col-sm-4 '}}) }}
        <div class="col-sm-6">
            {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.transport,"Je me rend au travail en", {'label_attr': {'class': 'col-sm-4'}}) }}
        <div class="col-sm-12">
            {{ form_widget(form.transport) }}
        </div>
    </div>

    <div class="pull-right">
        {{ form_widget(form.save) }}
    </div>

    {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}
