{#{% extends 'PichetCoreBundle::adminLayout.html.twig' %}#}
{% extends 'PichetCoreBundle::panelLayout.html.twig' %}
{#{% extends '::base.html.twig' %}#}

{% block content %}

        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
                <div class="row">
                        <div class="col-lg-12">
                                <h1 class="page-header">Dashboard</h1>
                        </div>
                </div><!--/.row-->

                <div class="row">
                        <div class="col-xs-12 col-md-6 col-lg-3">
                                <div class="panel panel-blue panel-widget ">
                                        <div class="row no-padding">
                                                <div class="col-sm-3 col-lg-5 widget-left">
                                                        <div class="large">{{ nbMailQuery }}</div>
                                                        {#<svg class="glyph stroked bag"><use xlink:href="#stroked-bag"></use></svg>#}
                                                </div>
                                                <div class="col-sm-9 col-lg-7 widget-right">
                                                        <div class="text-muted">Ouverture de mail</div>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-xs-12 col-md-6 col-lg-3">
                                <div class="panel panel-orange panel-widget">
                                        <div class="row no-padding">
                                                <div class="col-sm-3 col-lg-5 widget-left">
                                                        <div class="large">{{ nbParticipe }}</div>
                                                        {#<svg class="glyph"><use xlink:href="#stroked-empty-message"></use></svg>#}
                                                </div>
                                                <div class="col-sm-9 col-lg-7 widget-right">

                                                        <div class="text-muted">Clic sur le lien dans le mail</div>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-xs-12 col-md-6 col-lg-3">
                                <div class="panel panel-teal panel-widget">
                                        <div class="row no-padding">
                                                <div class="col-sm-3 col-lg-5 widget-left">
                                                        <div class="large">{{ nbInfoPersonnelle }}</div>
                                                        {#<svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg>#}
                                                </div>
                                                <div class="col-sm-9 col-lg-7 widget-right">
                                                        <div class="text-muted">Informations personnelles</div>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-xs-12 col-md-6 col-lg-3">
                                <div class="panel panel-red panel-widget">
                                        <div class="row no-padding">
                                                <div class="col-sm-3 col-lg-5 widget-left">
                                                        <div class="large">{{ nbInfoEntreprise }}</div>
                                                        {#<svg class="glyph stroked app-window-with-content"><use xlink:href="#stroked-app-window-with-content"></use></svg>#}
                                                </div>
                                                <div class="col-sm-9 col-lg-7 widget-right">
                                                        <div class="text-muted">Informations entreprise</div>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div><!--/.row-->

                <div class="row">
                        <div class="col-lg-12">
                                <div class="panel panel-default">
                                        <div class="panel-heading">Statistique line</div>
                                        <div class="panel-body">
                                                <div class="canvas-wrapper" data-mail="{{ nbMailQuery }}" data-personnelle="{{ nbInfoPersonnelle }}" data-participe="{{ nbParticipe }}" data-entreprise="{{ nbInfoEntreprise }}">
                                                        <canvas class="main-chart" id="line-chart" height="200" width="600"></canvas>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div><!--/.row-->

                <div class="row">
                        <div class="col-xs-6 col-md-3">
                                <div class="panel panel-default">
                                        <div class="panel-body easypiechart-panel">
                                                <h4>New Orders</h4>
                                                <div class="easypiechart" id="easypiechart-blue" data-percent="{{ (nbMailQuery * 100 / total)|round }}" ><span class="percent">{{ (nbMailQuery * 100 / total)|round }}%</span>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-xs-6 col-md-3">
                                <div class="panel panel-default">
                                        <div class="panel-body easypiechart-panel">
                                                <h4>Comments</h4>
                                                <div class="easypiechart" id="easypiechart-orange" data-percent="{{ (nbParticipe * 100 / total)|round }}" ><span class="percent">{{ (nbParticipe * 100 / total)|round }}%</span>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-xs-6 col-md-3">
                                <div class="panel panel-default">
                                        <div class="panel-body easypiechart-panel">
                                                <h4>New Users</h4>
                                                <div class="easypiechart" id="easypiechart-teal" data-percent="{{ (nbInfoPersonnelle * 100 / total)|round }}" ><span class="percent">{{ (nbInfoPersonnelle * 100 / total)|round }}%</span>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <div class="col-xs-6 col-md-3">
                                <div class="panel panel-default">
                                        <div class="panel-body easypiechart-panel">
                                                <h4>Visitors</h4>
                                                <div class="easypiechart" id="easypiechart-red" data-percent="{{ (nbInfoEntreprise * 100 / total)|round }}" ><span class="percent">{{ (nbInfoEntreprise * 100 / total)|round }}%</span>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>

        </div>

{% endblock %}
